            SqlCommand sqlCommand = new SqlCommand("dbo.XREC_Select_TentativeJoiningEmailData", connection);
            sqlCommand.CommandType = CommandType.StoredProcedure;
            SqlDataAdapter adapter = new SqlDataAdapter(sqlCommand);
            adapter.Fill(dt);
            return dt;

        }

