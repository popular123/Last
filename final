        [ValidateInput(false)]
        [HttpGet]
        public async Task<string> GetDealsAsync(int pageNo, int pageSize,int? categoryCode,int? locationCode)
        {
            try
            {
                Uri url = Request.UrlReferrer;
                DataSet ds = null;
                if (Constants.IsAjaxRequestAccept)
                {
