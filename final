        function CopyLink(txt) {
            var $temp = $("<input>");
            $("body").append($temp);
            $temp.val(txt).select();


            //document.execCommand("copy");          

            try {
                var successful = document.execCommand('copy');
                var msg = successful ? 'successful' : 'unsuccessful';
                alert('Link Copied successfully');
                $temp.remove();
            } catch (err) {
                alert('Oops, unable to copy');
                $temp.remove();
            }
        }
    </script>

